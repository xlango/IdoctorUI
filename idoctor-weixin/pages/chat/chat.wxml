<view class='top'>{{tittle}}</view>

<view class='que'>
  <block wx:for="{{syas}}" wx:for-item="item" wx:key='{{syas}}'>
    <view class='con'>
      <view class='isay'>
        <view class='r-t'>
          <text>{{item.isay}}</text>
        </view>
        <view class='r-i'>
          <image src='{{headRight}}'></image>
        </view>

      </view>
      <view class='robort'>
        <view class='l-i'>
          <image src='{{headLeft}}'></image>
        </view>
        <view class='l-t'>
          <text>{{item.robot}}</text>
        </view>
      </view>
    </view>
  </block>
</view>
<view class='send'>

  <view class='input'>
    <form bindsubmit='converSation'>
      <input type='text' class='text' placeholder='说点什么吧~' name='says'></input>
      <button class='btn' id='btn' form-Type='submit' form-type='submit'>发送</button>
    </form>
    <button class='btn-d' bindtap='delectChat'>清空</button>
  </view>

</view>