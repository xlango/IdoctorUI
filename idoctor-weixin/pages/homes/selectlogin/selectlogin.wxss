  width: 65%;
  margin-right: 90rpx;
  margin-top: 70rpx;
  background-color: rgb(245, 243, 238);
  color: rgb(24, 22, 22);
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.login-btn .btnImg {
  margin-right: 8rpx;
